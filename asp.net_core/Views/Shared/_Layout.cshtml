<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
@using System.Security.Claims;
<html xmlns="http://www.w3.org/1999/xhtml">
<!-- InstanceBegin template="/Templates/home-template.dwt" codeOutsideHTMLIsLocked="false" -->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!-- InstanceBeginEditable name="doctitle" -->
    <title>
        导航
    </title>

    <link rel="stylesheet" type="text/css" href="css/public.css" />
    <link rel="stylesheet" type="text/css" href="css/home-nav.css" />
    <!-- InstanceEndEditable -->
    <!-- InstanceBeginEditable name="head" -->
    <!-- InstanceEndEditable -->
    @RenderSection("css", false)
</head>

<body>
    @*顶部导航*@
    <div id="main">
        <div class="header-nav nav-bg">
            <div class="top">
                <div class="xgs-col6">
                    <span class="">
                        <img src="img/icon/location.png" height="18" width="18"
                             style="margin-top: 8px; float: left; display: inline-block; margin-top: 3px;" />&nbsp;&nbsp;广东
                        广州
                    </span>
                </div>
                <div class="xgs-col6">
                    <span class="xgs-offset5" style="display: inline-flex;">
                        @if (!Context.User.Claims.Any())
                        {
                            <a href="login.html" style="margin: 0 10px;">登录 </a>
                            <a href="register.html" style="margin: 0 10px;">注册</a>
                        }
                        else
                        {
                            var photo = Context.User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Thumbprint)?.Value ?? "";
                            var username = Context.User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Name)?.Value ?? "";

                            <a href="userinfo.html">
                                <img src="@photo"
                                     style="border-radius: 15%; width: 24px; height: 24px; line-height: 28px; float: left; margin-top: 2px" />&nbsp;&nbsp;
                                <span style="line-height: 27px"> @username &nbsp;</span>
                            </a><span> &nbsp;|&nbsp;</span>
                            <span><a href="userinfo.html">购物车 </a> &nbsp;</span>
                        }
                        <span onclick="ideaForm()"> |&nbsp;<a href="javascript:void(0);">问题反馈 </a> &nbsp; |&nbsp;</span>
                        <span><a href="about.html">关于我们 </a> </span>
                    </span>
                </div>
            </div>
        </div>
        <div class="header-top" style="clear:left">
            <div class="header-body" id="header-body" style="margin: auto;display: block; width: 1030px;">
                <ul id="header-nav">
                    <li class="float-left">
                        <a href="#">
                            <img src="img/logo.png" height="50" style="margin-top: 15px;" />
                        </a>
                    </li>
                    <li class="float-left" id="index-navitem">
                        <a href="javascript:void(0);" onclick="navEven('index.html')">
                            首页
                        </a>
                    </li>
                    <li class="float-left" id="book-market-navitem">
                        <a href="javascript:void(0);" onclick="navEven('market.html')">
                            手机
                        </a>
                    </li>
                    <li class="float-left" id="about-us-navitem">
                        <a href="javascript:void(0);" onclick="navEven('about.html')">
                            关于我们
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- 意见反馈 -->
    <div class="question white-panel" style="position: absolute;top: 300px;left: 30%;z-index:1; width: 500px;display:none;"
         id="question">
        <div id="" style="display: block;position: absolute;right: 10px;top:10px"
             onclick="ideaFormClose()">
            <img src="img/icon/iconmonstr-x-mark-7-240.png" width="24" height="24" />
        </div>
        <h3 style="text-align: center;line-height: 32px;margin: 20px 0;">
            意见反馈
        </h3>
        <form action="#" method="post" class="form">
            <div class="form-item">
                <span>
                    姓名：
                </span>
                <input type="text" name="" id="" value="" />
            </div>
            <div class="form-item">
                <span>
                    联系方式：
                </span>
                <input type="text" name="" id="" value="" />
            </div>
            <div class="form-item">
                <span>
                    问题：
                </span>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <textarea rows="10" cols="27">
          </textarea>
            </div>
            <div class="btn-goup" style="display: block;">
                <button type="button" class="submit-btn">
                    提交
                </button>
                <button type="reset" class="submit-btn">
                    重置
                </button>
            </div>
        </form>
    </div>
    <!-- 、意见反馈 -->
    @* 占位符 *@
    @RenderBody()

    @*底部版权*@
    <div class="footer">

        <div class="foot-body" style="margin: auto;width: 61%;">

            <ul>
                <li><a href="about.html">常见问题</a></li>
                <li><a href="about.html">关于我们</a></li>
                <li>客服QQ：1919399938</li>
                <li>客服微信：xgs39938</li>
            </ul>
            <p style="color: white;clear: left;text-align: center;">Copyright © 2012-2021 Tencent. All Rights Reserved.</p>
        </div>

    </div>
    <script src="js/public.js" type="text/javascript" charset="utf-8"></script>
    @RenderSection("script", false)
</body>

<!-- InstanceEnd -->
</html>